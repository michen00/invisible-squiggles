{
  "name": "invisible-squiggles",
  "displayName": "invisible-squiggles",
  "version": "0.2.0",
  "publisher": "michen00",
  "description": "toggle the transparency of info/error/warning squiggles",
  "author": {
    "name": "Michael I Chen"
  },
  "categories": [
    "Linters"
  ],
  "pricing": "Free",
  "activationEvents": [
    "onStartupFinished"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "invisible-squiggles.toggle",
        "title": "Toggle Squiggles"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Invisible Squiggles",
      "properties": {
        "invisibleSquiggles.hideErrors": {
          "type": "boolean",
          "default": true,
          "description": "Toggle error squiggles."
        },
        "invisibleSquiggles.hideWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Toggle warning squiggles."
        },
        "invisibleSquiggles.hideInfo": {
          "type": "boolean",
          "default": true,
          "description": "Toggle info squiggles."
        },
        "invisibleSquiggles.hideHint": {
          "type": "boolean",
          "default": true,
          "description": "Toggle hint squiggles."
        },
        "invisibleSquiggles.showStatusBarMessage": {
          "type": "boolean",
          "default": false,
          "description": "Display a message in the status bar when squiggle visibility is toggled."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run compile -- --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "mocha --require out/test/unit/setup.js out/test/unit/**/*.test.js",
    "test:integration": "vscode-test --config .vscode-test.integration.mjs",
    "test:e2e": "vscode-test --config .vscode-test.e2e.mjs",
    "test:coverage": "c8 npm run test:unit"
  },
  "c8": {
    "reporter": [
      "text",
      "text-summary"
    ],
    "exclude": [
      "**/test/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/out/test/**"
    ],
    "include": [
      "out/extension.js"
    ],
    "check-coverage": true,
    "statements": 70,
    "branches": 80,
    "functions": 40,
    "lines": 70,
    "all": true
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.7.1",
    "c8": "^10.1.3",
    "esbuild": "^0.25.0",
    "eslint": "^9.13.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.7.3"
  },
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/michen00/invisible-squiggles"
  },
  "homepage": "https://github.com/michen00/invisible-squiggles/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/michen00/invisible-squiggles/issues"
  }
}
