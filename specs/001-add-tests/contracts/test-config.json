{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Configuration Contract",
  "description": "Configuration contract for testing infrastructure",
  "type": "object",
  "properties": {
    "testTypes": {
      "type": "object",
      "description": "Configuration for each test type",
      "properties": {
        "unit": {
          "type": "object",
          "properties": {
            "timeout": {
              "type": "number",
              "description": "Test timeout in milliseconds",
              "default": 5000
            },
            "requiresVSCode": {
              "type": "boolean",
              "description": "Whether tests require VSCode runtime",
              "default": false
            }
          }
        },
        "integration": {
          "type": "object",
          "properties": {
            "timeout": {
              "type": "number",
              "description": "Test timeout in milliseconds",
              "default": 30000
            },
            "requiresVSCode": {
              "type": "boolean",
              "description": "Whether tests require VSCode runtime",
              "default": true
            }
          }
        },
        "e2e": {
          "type": "object",
          "properties": {
            "timeout": {
              "type": "number",
              "description": "Test timeout in milliseconds",
              "default": 60000
            },
            "requiresVSCode": {
              "type": "boolean",
              "description": "Whether tests require VSCode runtime",
              "default": true
            }
          }
        }
      }
    },
    "coverage": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to generate coverage reports",
          "default": true
        },
        "threshold": {
          "type": "number",
          "description": "Coverage threshold percentage (warning only)",
          "default": 80,
          "minimum": 0,
          "maximum": 100
        },
        "format": {
          "type": "string",
          "description": "Coverage report format",
          "enum": ["terminal"],
          "default": "terminal"
        },
        "include": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files/directories to include in coverage",
          "default": ["src/extension.ts"]
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files/directories to exclude from coverage",
          "default": ["src/test/**", "node_modules/**", "dist/**", "out/**"]
        }
      }
    }
  }
}
