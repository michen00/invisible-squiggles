{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022", "dom"],
    "module": "Node16",
    "moduleResolution": "node16",
    "noUncheckedIndexedAccess": true,
    "outDir": "out",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["mocha", "node", "vscode"]
  },
  "exclude": ["node_modules", ".vscode-test", "dist"],
  "include": ["src/**/*.ts"]
}
